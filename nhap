          } else {
            currentTheme = localStorage.getItem('theme') || STYLE.PRESET;
          }

          let currentMode = localStorage.getItem('mode') || (prefersDark.matches ? 'dark' : 'light');

          applyTheme(currentTheme, currentMode);

          themeToggle.addEventListener('click', () => {
            const newMode = document.body.dataset.mode === 'light' ? 'dark' : 'light';
            applyTheme(document.body.dataset.theme, newMode);
          });

          prefersDark.addEventListener('change', (e) => {
            // Ch·ªâ t·ª± ƒë·ªông ƒë·ªïi n·∫øu ng∆∞·ªùi d√πng ch∆∞a set th·ªß c√¥ng
            if (!localStorage.getItem('mode')) {
              applyTheme(document.body.dataset.theme, e.matches ? 'dark' : 'light');
            }
          });
        }

        function applyTheme(theme, mode) {
          if (!theme || !mode) return;

          document.body.dataset.theme = theme;
          document.body.dataset.mode = mode;
          localStorage.setItem('theme', theme);
          localStorage.setItem('mode', mode);

          // C·∫≠p nh·∫≠t Accent
          if (THEME_RANDOMIZER.SYNC_ACCENT && AUTO_ACCENT_PALETTE.MAP[theme]) {
            document.documentElement.style.setProperty('--accent', AUTO_ACCENT_PALETTE.MAP[theme]);
          } else {
            document.documentElement.style.setProperty('--accent', STYLE.ACCENT);
          }

          // C·∫≠p nh·∫≠t icon toggle
          const themeToggle = document.getElementById('theme-toggle');
          const iconLight = themeToggle.querySelector('.icon-light');
          const iconDark = themeToggle.querySelector('.icon-dark');
          if (mode === 'dark') {
            iconLight.style.display = 'none';
            iconDark.style.display = 'inline-block';
            themeToggle.setAttribute('aria-label', 'Chuy·ªÉn ch·∫ø ƒë·ªô s√°ng');
          } else {
            iconLight.style.display = 'inline-block';
            iconDark.style.display = 'none';
            themeToggle.setAttribute('aria-label', 'Chuy·ªÉn ch·∫ø ƒë·ªô t·ªëi');
          }
          
          // C·∫≠p nh·∫≠t Meta Theme Color
          const themeColorMeta = document.querySelector('meta[name="theme-color"]');
          if (themeColorMeta) {
            themeColorMeta.setAttribute('content', document.documentElement.style.getPropertyValue('--accent'));
          }
        }

        // ========================================================================
        // 2. MODULE HEADER & NAVIGATION
        // ========================================================================

        function initHeaderScroll() {
          const header = document.getElementById('site-header');
          if (!header) return;
          
          const onScroll = () => {
            if (window.scrollY > 50) {
              header.classList.add('scrolled');
            } else {
              header.classList.remove('scrolled');
            }
          };
          window.addEventListener('scroll', onScroll, { passive: true });
          onScroll(); // Ki·ªÉm tra khi t·∫£i trang
        }

        function buildNavigation() {
          const navContainer = document.getElementById('main-nav');
          const mobileNavContainer = document.getElementById('mobile-nav-links');
          if (!navContainer || !mobileNavContainer) return;

          const createNavLinks = (isMobile = false) => {
            const ul = document.createElement('ul');
            ul.className = isMobile ? 'mobile-nav-list' : 'nav-links';
            
            MENU.forEach(item => {
              const li = document.createElement('li');
              const key = Object.keys(item)[0];
              const value = item[key];

              if (Array.isArray(value)) {
                // ƒê√¢y l√† dropdown
                li.className = 'dropdown';
                const button = document.createElement('button');
                button.innerHTML = `${key} <span class="material-symbols-rounded" style="font-size: 1rem; vertical-align: middle;">expand_more</span>`;
                button.setAttribute('aria-haspopup', 'true');
                button.setAttribute('aria-expanded', 'false');
                
                const dropdownMenu = document.createElement('div');
                dropdownMenu.className = 'dropdown-menu glass';
                
                value.forEach(subItem => {
                  const subKey = Object.keys(subItem)[0];
                  const subValue = subItem[subKey];
                  const subA = document.createElement('a');
                  subA.href = subValue;
                  subA.textContent = subKey;
                  if (window.location.pathname.endsWith(subValue) || (subValue === "./" && (window.location.pathname.endsWith('/') || window.location.pathname.endsWith('index.html')))) {
                    li.classList.add('active'); // Active c·∫£ parent
                    subA.classList.add('active');
                  }
                  dropdownMenu.appendChild(subA);
                });
                
                li.appendChild(button);
                li.appendChild(dropdownMenu);
                
                if(isMobile) {
                    button.addEventListener('click', () => {
                        const isExpanded = dropdownMenu.style.display === 'block';
                        dropdownMenu.style.display = isExpanded ? 'none' : 'block';
                        button.setAttribute('aria-expanded', !isExpanded);
                    });
                    dropdownMenu.style.display = 'none'; // ·∫®n ban ƒë·∫ßu
                }

              } else {
                // ƒê√¢y l√† link ƒë∆°n
                const a = document.createElement('a');
                a.href = value;
                a.textContent = key;
                if (window.location.pathname.endsWith(value) || (value === "./" && (window.location.pathname.endsWith('/') || window.location.pathname.endsWith('index.html')))) {
                  li.classList.add('active');
                }
                li.appendChild(a);
              }
              ul.appendChild(li);
            });
            return ul;
          };
          
          navContainer.appendChild(createNavLinks(false));
          mobileNavContainer.appendChild(createNavLinks(true));
        }
        
        function initMobileNavigation() {
            const navToggle = document.getElementById('nav-toggle');
            const navClose = document.getElementById('nav-close');
            const navPanel = document.getElementById('mobile-nav-panel');
            const navOverlay = document.getElementById('nav-overlay');
            const body = document.body;

            if (!navToggle || !navClose || !navPanel || !navOverlay) return;

            const openNav = () => {
                body.classList.add('nav-open');
                navPanel.removeAttribute('hidden');
                navToggle.setAttribute('aria-expanded', 'true');
                navClose.focus();
                // Trap focus
                document.addEventListener('keydown', trapFocus);
            };

            const closeNav = () => {
                body.classList.remove('nav-open');
                navPanel.setAttribute('hidden', 'true');
                navToggle.setAttribute('aria-expanded', 'false');
                navToggle.focus();
                document.removeEventListener('keydown', trapFocus);
            };

            navToggle.addEventListener('click', openNav);
            navClose.addEventListener('click', closeNav);
            navOverlay.addEventListener('click', closeNav);
            
            // ƒê√≥ng khi nh·∫•n Esc
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && body.classList.contains('nav-open')) {
                    closeNav();
                }
            });

            // Focus trap
            const focusableElements = navPanel.querySelectorAll(
                'a[href]:not([disabled]), button:not([disabled])'
            );
            const firstFocusable = focusableElements[0];
            const lastFocusable = focusableElements[focusableElements.length - 1];

            function trapFocus(e) {
                if (e.key !== 'Tab') return;
                
                if (e.shiftKey) { // Shift + Tab
                    if (document.activeElement === firstFocusable) {
                        lastFocusable.focus();
                        e.preventDefault();
                    }
                } else { // Tab
                    if (document.activeElement === lastFocusable) {
                        firstFocusable.focus();
                        e.preventDefault();
                    }
                }
            }
        }

        // ========================================================================
        // 3. MODULE FOOTER
        // ========================================================================

        function buildFooter() {
          const gridContainer = document.getElementById('footer-grid');
          if (!gridContainer) return;

          const cols = FOOTER_6COL.COLS;
          for (const colKey in cols) {
            const colDiv = document.createElement('div');
            colDiv.className = 'footer-col';
            
            const title = document.createElement('h4');
            // B·ªè ph·∫ßn "colX_" kh·ªèi key
            title.textContent = colKey.substring(colKey.indexOf('_') + 1).replace(/([A-Z])/g, ' $1').trim();
            colDiv.appendChild(title);
            
            const ul = document.createElement('ul');
            cols[colKey].forEach(item => {
              const li = document.createElement('li');
              const key = Object.keys(item)[0];
              const value = item[key];
              
              const a = document.createElement('a');
              a.href = value;
              a.textContent = key;
              if (value.startsWith('http')) {
                a.target = '_blank';
                a.rel = 'noopener noreferrer';
              }
              
              li.appendChild(a);
              ul.appendChild(li);
            });
            
            colDiv.appendChild(ul);
            gridContainer.appendChild(colDiv);
          }
        }

        // ========================================================================
        // 4. MODULE QUICK CALL ACTION (QCA)
        // ========================================================================

        function initQuickCall() {
          const widget = document.getElementById('qca-widget');
          const toggle = document.getElementById('qca-toggle');
          if (!widget || !toggle) return;

          let isQcaOpen = false;

          const toggleMenu = (open) => {
            isQcaOpen = open;
            widget.setAttribute('aria-expanded', isQcaOpen);
            toggle.setAttribute('aria-label', isQcaOpen ? 'ƒê√≥ng menu li√™n h·ªá nhanh' : 'M·ªü menu li√™n h·ªá nhanh');
          };
          
          toggle.addEventListener('click', () => {
            toggleMenu(!isQcaOpen);
          });
          
          // ƒê√≥ng khi click ra ngo√†i
          document.addEventListener('click', (e) => {
            if (isQcaOpen && !widget.contains(e.target)) {
              toggleMenu(false);
            }
          });
          
          // ƒê√≥ng khi nh·∫•n Esc
          document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && isQcaOpen) {
              toggleMenu(false);
              toggle.focus();
            }
          });
        }

        // ========================================================================
        // 5. MODULE HI·ªÜU ·ª®NG & HO·∫†T C·∫¢NH
        // ========================================================================

        function initRipple() {
          document.body.addEventListener('click', function(e) {
            const target = e.target.closest('.ripple');
            if (target) {
              const rect = target.getBoundingClientRect();
              const x = e.clientX - rect.left;
              const y = e.clientY - rect.top;
              
              let ripple = target.querySelector('.ripple-effect');
              if (ripple) {
                ripple.remove();
              }
              
              ripple = document.createElement('span');
              ripple.className = 'ripple-effect';
              ripple.style.left = `${x}px`;
              ripple.style.top = `${y}px`;
              
              target.appendChild(ripple);
              
              ripple.addEventListener('animationend', () => {
                ripple.remove();
              });
            }
          });
        }

        function initTilt() {
          if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
            return;
          }
          
          const tiltElements = document.querySelectorAll('.tilt');
          
          tiltElements.forEach(el => {
            el.addEventListener('mousemove', (e) => {
              const rect = el.getBoundingClientRect();
              const x = e.clientX - rect.left - rect.width / 2;
              const y = e.clientY - rect.top - rect.height / 2;
              
              const rotateX = (y / rect.height) * -6; // Max 3 ƒë·ªô
              const rotateY = (x / rect.width) * 6;  // Max 3 ƒë·ªô
              
              el.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.02)`;
              el.style.transition = 'transform 0.1s ease-out';
            });
            
            el.addEventListener('mouseleave', () => {
              el.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale(1)';
              el.style.transition = 'transform 0.3s ease-in-out';
            });
          });
        }

        function initScrollAnimation() {
          const scrollElements = document.querySelectorAll('.scroll-anim');
          if (!scrollElements.length) return;

          if ('IntersectionObserver' in window) {
            const observer = new IntersectionObserver((entries, obs) => {
              entries.forEach(entry => {
                if (entry.isIntersecting) {
                  entry.target.classList.add('visible');
                  obs.unobserve(entry.target);
                }
              });
            }, {
              threshold: 0.1, // Hi·ªán khi 10% v√†o m√†n h√¨nh
              rootMargin: '0px 0px -50px 0px' // B·∫Øt ƒë·∫ßu s·ªõm 50px
            });

            scrollElements.forEach(el => {
              observer.observe(el);
            });
          } else {
            // Fallback cho tr√¨nh duy·ªát c≈© (ch·ªâ hi·ªán t·∫•t c·∫£)
            scrollElements.forEach(el => el.classList.add('visible'));
          }
        }
        
        function initFaqToggle() {
            const detailsElements = document.querySelectorAll('.faq-item details');
            detailsElements.forEach(details => {
                details.addEventListener('toggle', (event) => {
                    const icon = details.querySelector('.faq-icon');
                    if (details.open) {
                        icon.textContent = 'remove';
                    } else {
                        icon.textContent = 'add';
                    }
                });
            });
        }

      })();
    </script>

</body>
</html>

